<div id="main-ui" class="container mt-5">
  <div class="row justify-content-around">
    {{#each tags}}
    <div class="col-sm-4 col-md-3 m-1">
      <button id={{this}} class="tag-button">#{{this}}</a>
    </div>
    {{/each}}
  </div>

  <div id="tagged-files" class="row justify-content-center mt-5">
  </div>
</div>

<div id="overlay" class="hide">

  <div class="m-3 modal-links">
    <div class="row justify-content-center m-3">
      <button id="modal-close-link" class="danger-button">Close</button>
    </div>
  </div>
  <img id="modal-file" class="img-thumbnail mx-auto my-auto d-block" src="" alt="selected file" />

  <div class="m-3 modal-links">
    <div class="row justify-content-center m-3">
      <a id="modal-file-download-link" href="" target="_blank">Download
        link</a>
    </div>


    <div class="row justify-content-center m-1">
      <div>
        <button id="modal-edit-file" data-toggle="modal" data-target="#edit-form" class="normal-button">Edit tags <img
            class="icon" src="./assets/edit-icon.svg" alt="edit-icon">
        </button>
      </div>
    </div>
    <div class="row justify-content-center m-1">
      <div>
        <button id="modal-delete-file" data-toggle="modal" data-target="#delete-confirmation"
          class="danger-button">Delete
          file<img class="icon" src="./assets/delete-icon.svg" alt="delete-icon">
        </button>
      </div>

    </div>
  </div>

</div>

<div class="modal fade" id="delete-confirmation" role="dialog" aria-labelledby="confirmation-title" aria-hidden="true">
  <div class="modal-dialog" role="alert">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmation-title">Delete confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>This action will remove this file from your tags.</p>
      </div>
      <div class="modal-footer">
        <button class="normal-button" data-dismiss="modal">Cancel</button>

        <form action="/tags/delete" method="POST">
          <input type="text" class="hide" id="delete-confirmation-fileId" name="fileId">

          <button type="submit" class="danger-button">Confirm delete</button>
        </form>

      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="edit-form" role="dialog" aria-labelledby="edit-title" aria-hidden="true">
  <div class="modal-dialog" role="alert">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="edit-title">Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <p>Change tags below as you desire</p>

        <form action="/tags/edit" method="POST">

          <input type="text" class="hide" id="edit-fileId" name="fileId">

          <div class="form-group">
            <input type="text" id="edit-tags-input" class="form-control" name="editedTags" spellcheck="false"
              autocomplete="off">
          </div>
          <button type="submit" class="normal-button">Save changes</button>
        </form>
      </div>

      <div class="modal-footer">
        <button class="normal-button" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>