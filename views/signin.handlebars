<div class="container">
  <div class="row justify-content-center mt-5">
    <h1>Sign in</h1>
  </div>
  <div class="row justify-content-center mt-5">

    <form action="/signin" method="POST" id="signin-form" class="stop-shake-on-hover">

      {{> messages}}

      <div class="form-group">
        <label for="Email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="email" spellcheck="false"
          required value={{#if email}} {{email}} {{/if}}>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" id="password" required>
      </div>

      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
  <div class="row justify-content-center mt-2">
    <p>If you don't have an account <a href="/signup">register here</a></p>
  </div>

</div>